{
  "manifest_version": 2,

  "name": "Slackr",
  "description": "Prompts at regular intervals to remind you to stop slacking off!",

  "version": "1.2.0",

  "permissions": [
    "notifications"
  ],

  "background": {
    "scripts": ["script.js"]
  },

  "browser_action": {
    "default_title": "Click to configure Slackr settings",
    "default_icon": "icons/sloth-128.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/sloth-16.png",
    "32": "icons/sloth-32.png",
    "64": "icons/sloth-64.png",
    "128": "icons/sloth-128.png"
  }
}
